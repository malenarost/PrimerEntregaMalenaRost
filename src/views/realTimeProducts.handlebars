<div class='realtimeproducts-container'>
  <form id='form-products'>
    <div class='input-container title-price'>
      <div class='input-form'>
        <label for='title'>Title:</label>
        <input id='form-new-product-title' type='text' name='title' placeholder='Title' required />
      </div>
      <div class='input-form'>
        <label for='price'>Price:</label>
        <input id='form-new-product-price' type='number' name='price' placeholder='Price' required />
      </div>
    </div>
    <div class='input-container description-thumbail'>
      <div class='input-form'>
        <label for='description'>Description:</label>
        <input id='form-new-product-description' type='text' name='description' placeholder='Description' required />
      </div>
      <div class='input-form'>
        <label for='thubmail'>Thubmail:</label>
        <input id='form-new-product-thubmail' type='text' name='thubmail' placeholder='Thubmail' />
      </div>
    </div>
    <div class='input-container code-stock'>
      <div class='input-form'>
        <label for='code'>Code:</label>
        <input id='form-new-product-code' type='text' name='code' placeholder='Code' required />
      </div>
      <div class='input-form'>
        <label for='stock'>Stock:</label>
        <input id='form-new-product-stock' type='number' name='stock' placeholder='Stock' required />
      </div>
    </div>
    <input id='btn-form' type='submit' placeholder='Crear Producto' />
  </form>

  <div class='table-container'>
    <h1>Todos los productos</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Price</th>
          <th>Thubmail</th>
          <th>Code</th>
          <th>Stock</th>
          <th></th>
        </tr>
      </thead>
      <tbody id='dinamic-product-list'>
        {{#each allProducts}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.thubmail}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>
              <button type='button' class='btn-delete' value={{this.id}}>
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script src='/socket.io/socket.io.js'></script>
<script src='https://cdn.jsdelivr.net/npm/sweetalert2@11'></script>
<script src='/js/realtimeproducts.js'></script>